nav#side-menu.minimal
        ul
         li(class=title=='home'?'mm-selected':undefined)
            a(href='/dashboard')
              i.fa.fa-home.fa-2x
              | Home 
         if session.accountdetails.isisadmin =="1" 
            li.customers
              span
                i.fa.fa-users.fa-2x
                | Customers
              ul
                li(class=title=='createcustomer'?'mm-selected':undefined)
                  a(href='/customer/create')
                    i.fa.fa-plus.fa-2x
                    | Create Customer
                li(class=title=='managecustomer'?'mm-selected':undefined)
                  a(href='/customer/manage')
                    i.fa.fa-th-list.fa-2x
                    | Manage Customers
            li.users
             span
               i.fa.fa-user.fa-2x
               | Users
             ul
              li(class=title=='createuser'?'mm-selected':undefined)
                  a(href='/user/create/new')
                    i.fa.fa-plus.fa-2x
                    | Create User
              li(class=title=='managealluser'?'mm-selected':undefined)
                a(href='/user/manageall')
                  i.fa.fa-user.fa-2x
                  | Manage Users
            li.impersonate(class=title=='impersonateuser'?'mm-selected':undefined)
             a(href='/user/impersonate')
              i.fa.fa-random.fa-2x
              | Impersonate User
