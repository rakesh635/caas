           li.applications
             span
               i.fa.fa-list-alt.fa-2x
               | Applications
             ul.sub-menu.nav-pills.nav-stacked              
               li(class=title=='createapp'?'mm-selected':undefined)
                 a(href='/application/createapplication')
                   i.fa.fa-plus.fa-2x
                   | Create Application
               li(class=title=='createdb'?'mm-selected':undefined)
                 a(href='/application/createdatabase')
                   i.fa.fa-plus.fa-2x
                   | Create Database              
               li(class=title=='manageapp'?'mm-selected':undefined)
                 a(href='/application/manage/all')
                   i.fa.fa-th-list.fa-2x
                   | Manange Applications
               li(class=title=='manageinstance'?'mm-selected':undefined)
                 a(href='/application/manageinstance')
                   i.fa.fa-th-list.fa-2x
                   | Manange Instances               
           li(class=title=='CreateEnv'?'mm-selected':undefined)
             span
               i.fa.fa-desktop.fa-2x
               | Environments
             ul.sub-menu.nav-pills.nav-stacked
               li(class=title=='CreateEnv'?'mm-selected':undefined)
                 a(href='/environment/create')
                   i.fa.fa-plus.fa-2x
                   | Create Environment      
               li(class=title=='ManageEnv'?'mm-selected':undefined)
                 a(href='/environment/manage')
                   i.fa.fa-th-list.fa-2x
                   | Manage Environments
               

          li.divider
