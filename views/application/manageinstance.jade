extends ../layout/_fullwidth.jade

block pageTitle
  title ISCP | Manage Instance
block pageStyle
    link(rel="stylesheet" href="/assets/plugins/datatable/dataTables.bootstrap.min.css")
    link(rel="stylesheet" href="/assets/plugins/datatable/responsive.bootstrap.min.css")

block pageContent
    .row
      .col-sm-12
        h1 Instances Management

    br
    .row
      .col-md-10.col-md-offset-1.col-sm-12
        .panel.panel-default
          .panel-heading
            .row
              .col-lg-3.text-center
                | Currently viewing instances
                br
                strong
              .col-lg-7.text-center
                .input-group
                  input#hdn-applicationid(type='hidden', value='#{applicationid}')
                  input#hdn-type(type='hidden', value='#{type}')
                  input#adv-search-instance.form-control(type='text', placeholder='Search for Instance')
                  .input-group-btn
                    button.btn.btn-default(type='button', aria-label='Help')
                      span.glyphicon.glyphicon-search
              .col-lg-2.text-center
                a#btn-refresh.btn.btn-color_4
                  i.fa.fa-refresh(aria-hidden='true') 
                  |     Refresh
          .panel-body(style='text-align: left;')
            table#tbl-manageinstance.table.table-striped.table-bordered.table-responsive.table-hover.no-footer.table-th-info(role='grid')
block modals
    include ../includes/_deletemodal.jade
    include _instancelogsmodal.jade
block pageScript
  script(src="/assets/plugins/datatable/jquery.dataTables.min.js" type="text/javascript")
  script(src="/assets/plugins/datatable/dataTables.bootstrap.min.js" type="text/javascript")
  script(src="/assets/plugins/datatable/dataTables.responsive.min.js" type="text/javascript")
  script(src="/assets/plugins/datatable/responsive.bootstrap.min.js" type="text/javascript")
  script(src="/assets/plugins/datatable/fnReloadAjax.js" type="text/javascript")
  script(src="/assets/plugins/datatable/date-euro.js" type="text/javascript")

  script(src="/caasjslib/caasjslib.application.view.js" type="text/javascript")
  script(src="/caasjslib/caasjslib.application.eventhandler.js" type="text/javascript")
  script(src="/caasjslib/caasjslib.application.viewmodel.js" type="text/javascript")

  script.
    $(function () {
     var view = caasjslib.application.view;
     view.ManageInstanceInit();
    });