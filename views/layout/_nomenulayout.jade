            style.
              h1 {
              font-size: 24px !important;
              color: #00aeef !important;
              text-align: center;
              }
              .container-login {
              width: 100%;
              font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
              }
              .card-container-s {
              max-width: 350px;
              background-color: #F7F7F7;
              padding: 10px 15px 30px;
              margin: 0 auto 25px;
              margin-top: 20px;
              /* shadows and rounded borders */
              -moz-border-radius: 2px;
              -webkit-border-radius: 2px;
              border-radius: 2px;
              -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
              -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
              box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
              }
              .profile-img-card-s {
              width: 96px;
              height: 96px;
              margin: 10px auto 10px;
              display: block;
              -moz-border-radius: 13px;
              -webkit-border-radius: 13px;
              border-radius: 13px;
              border: 1px solid #0077be;
              }
              .form-signin-s .inputEmail,
              .form-signin-s .inputText,
              .form-signin-s .inputPassword {
              direction: ltr;
              height: 44px;
              font-size: 16px;
              padding-left: 10px;
              }
              .form-signin-s input[type=email],
                .form-signin-s input[type=text],
              .form-signin-s input[type=password] {
              width: 100%;
              display: block;
              z-index: 1;
              position: relative;
              }
              .form-signin-s:focus {
              border-color: rgb(104, 145, 162);
              outline: 0;
              -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgb(104, 145, 162);
              box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgb(104, 145, 162);
              }
              .btn-signin-s {
              /*margin-top: 20px;*/
              background-color: #00aeef;
              color: white;
              padding: 5px;
              font-weight: 500;
              font-size: 14px;
              height: 44px;
              width: 100%;
              -moz-border-radius: 3px;
              -webkit-border-radius: 3px;
              border-radius: 3px;
              border: 1px solid #0077be;
              -o-transition: all 0.218s;
              -moz-transition: all 0.218s;
              -webkit-transition: all 0.218s;
              transition: all 0.218s;
              text-decoration: none;
              }
              .btn-signin-s:hover,
              .btn-signin-s:active,
              .btn-signin-s:focus {
              background-color: #0077be;
              border: 1px solid #00aeef;
              }
              .forgot-password-s {
              color: #0077be;
              font-size: 14px;
              float: right;
              text-align: right;
              padding-right: 10px;
              text-decoration: none;
              }
              .forgot-password-s:hover,
              .forgot-password-s:active,
              .forgot-password-s:focus {
              color: #70266e;
              text-decoration: underline;
              }
              .n-p{
              padding: 0;
              }
              .p-r{
              padding-right: 15px;
              }
              .p-l{
              padding-left: 15px;
              }
              .m-r{
              margin-right: 15px;
              }
              .m-l{
              margin-left: 15px;
              }
              .hr-light{
              border-top:1px solid #e5e5e5;
