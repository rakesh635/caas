extends ../../layout/_fullwidth.jade

block pageTitle
  title ISCP | Create Customer
block pageStyle
     link(rel='stylesheet', href="../../assets/plugins/datepicker/datepicker.min.css")
     link(rel='stylesheet', href="../../assets/plugins/datepicker/datepicker3.min.css")
block pageContent
 .container-fluid
  .row
   .col-md-12.col-sm-12
     h1 New Customer
                    a.btn.btn-color_3.pull-right(href='/customer/manage') View Customers >>
                    span.pull-right  
  .row
      p.lead.col-md-offset-5.text-danger #{error} 
      form#form-customer.form-horizontal(action='/customer/create' ,method='post',name='formcustomer')
        .form-group
         .col-md-6.col-md-offset-3
           #messages
        .col-sm-6.col-sm-offset-3
          h5 Personal Details
        .form-group.col-md-12
          label.col-sm-3.control-label(for='firstname') First Name
          .col-sm-6
            input#txt-firstname.form-control(data-toggle='tooltip', title='Enter your first name',type='text', placeholder='First Name', name='firstname',maxlength='20')
        .form-group.col-md-12
          label.col-sm-3.control-label(for='lastname') Last Name
          .col-sm-6
            input#txt-lastname.form-control(data-toggle='tooltip', title='Enter your last name',type='text', placeholder='Last Name', name='lastname',maxlength='20')
        .form-group.col-md-12
          label.col-sm-3.control-label(for='organisation') Organisation
          .col-sm-6
            input#txt-organisation.form-control(data-toggle='tooltip', title='Enter your Organisation',type='text', placeholder='Organisation', name='organisation',maxlength='20')
        .col-sm-6.col-sm-offset-3
          h5 Contact Details
        .form-group.col-md-12
          label.col-sm-3.control-label(for='contactnumber') Contact Number
          .col-sm-6
            input#txt-contactnumber.form-control(data-toggle='tooltip', title='Enter your contact number',type='text', placeholder='Contact Number', name='contactnumber',maxlength='20')
        .form-group.col-md-12
          label.col-sm-3.control-label(for='email') Email Address
          .col-sm-6
            input#txt-emailaddress.form-control(data-toggle='tooltip', title='Enter your email address ',type='text', placeholder='Email Address', name='email',maxlength='50')
        .col-sm-6.col-sm-offset-3
          h5 Subscription Details
        .form-group.col-md-12
          label.col-sm-3.control-label(for='licensestartdate') Subscription Start Date
          .col-md-6.date
            #dplicensestartdate.input-group.input-append.date
              input#txt-licensestartdate.bg-white(data-toggle='tooltip', title='Select your start subscription date',type="text", class="form-control",placeholder='dd/mm/yyyy', name="licensestartdate",readonly)
              span.input-group-addon.add-on
               span.glyphicon.glyphicon-calendar
        .form-group.col-md-12
          label.col-sm-3.control-label(for='licenseenddate') Subscription End Date
          .col-md-6.date
            #dplicenseenddate.input-group.input-append.date
              input#txt-licenseenddate.bg-white(data-toggle='tooltip', title='Select your end subscription date',type="text", class="form-control",placeholder='dd/mm/yyyy', name="licenseenddate",readonly)
              span#calendaricon.input-group-addon.add-on
               span.glyphicon.glyphicon-calendar
        .col-sm-6.col-sm-offset-3
          h5 Domain
        .form-group.col-md-12
          label.col-sm-3.control-label(for='prefix') Prefix
          .col-sm-6
            input#txt-domainname.form-control(data-toggle='tooltip', title='Enter your Prefix',type='text', placeholder='Prefix', name='prefix',maxlength='20' )
        .col-sm-6.col-sm-offset-3
          h5 API Details
        .form-group.col-md-12
          .col-sm-6.col-sm-offset-3
            .checkbox
                input#txt-apitoken(type='checkbox', name='apitoken', checked='')
                label Require API Access token
        .col-md-6.col-md-offset-3.text-center
           hr
           a.btn.btn-default(href='/customer/manage')
             i.fa.fa-times
             |  Cancel
           |     
           button.btn.btn-color_1(type='submit')
             i.fa.fa-check
             |  Submit
           hr
           input(type='hidden',name='apptype',value='database')
block pageScript
  script(src="../../assets/plugins/datepicker/bootstrap-datepicker.min.js" type="text/javascript")
  script(src="../../caasjslib/caasjslib.customer.view.js" type="text/javascript")
  script(src="../../caasjslib/caasjslib.customer.eventhandler.js" type="text/javascript")
  script.
    $(function () {
     var view = caasjslib.customer.view;
     view.CreateCustomerInit();
    });